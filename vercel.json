{
  "version": 2,
  "builds": [
    {
      "src": "api/spotify.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "includedFiles": ["templates/**"],
        "installCommand": "pip install -r vercel-requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/spotify.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
} 